<!-- BEGIN: Head-->

<head>
    <title>eats 회원가입</title>
</head>
<!-- END: Head-->
<header>
    <% include template/header %>
</header>
<!-- BEGIN: Body-->
<!-- ======= Mobile nav toggle button ======= -->
