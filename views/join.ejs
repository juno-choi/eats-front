<i class="bi bi-list mobile-nav-toggle d-xl-none"></i>
<header id="header" class="d-flex flex-column justify-content-center">

<nav id="navbar" class="navbar nav-menu">
    <ul>
    <li><a href="/" class="nav-link"><i class="bx bx-home"></i> <span>Home</span></a></li>
    <li><a href="/eats" class="nav-link"><i class="bx bx-server"></i> <span>메뉴뽑기</span></a></li>
    <li><a href="/login" class="nav-link"><i class="bx bx-user"></i> <span>로그인</span></a></li>
    </ul>
</nav>
</header>

<body>
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact" style="height: 100vh;">
    <div class="container">
        <div class="section-title mb-5">
            <h2>eats 회원가입</h2>
        </div>
        <div class="card">
            <div class="card-header border-0">
                <div class="card-title text-center">
                    <h3>회원가입</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row mt-2">
                    <div class="col-lg-12">
                        <form name="f">
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control form-control-lg input-lg" id="id" placeholder="아이디">
                                </div>
                                <div class="col-md-12 form-group mt-3">
                                    <input type="password" class="form-control form-control-lg input-lg" id="pw" placeholder="비밀번호" required>
                                </div>
                                <div class="col-md-12 form-group mt-3">
                                    <input type="email" class="form-control form-control-lg input-lg" id="email" placeholder="이메일" required>
                                </div>
                            </div>
                        </form>
                        <div class="row mt-3">
                            <div class="col-md-12 text-center">
                                <button type="button" class="btn btn-info btn-lg btn-block" onclick="join()"><i class="ft-unlock"></i> 회원가입</button>
                                <p class="text-center">이미 가입하신 계정이 존재하십니까? <a href="/login" class="card-link">로그인</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section><!-- End Contact Section -->
</body>
<footer>
    <% include template/footer %>
</footer>
<!-- page srcript -->
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
    function join(){
        axios.post('/join', {
            params: {
                id: f.id.value,
                email : f.email.value,
                pw : f.pw.value
            }
        }).then((result)=>{
            const data = result.data;
            if(data.success){
                alert('회원가입 완료');
                location.href='/login';
            }else{
                alert('회원가입 실패');
            }
        });
    }
</script>
</html>