    <script>
        function login(){
            const form = document.f;
            axios.post('/login', {
                params: {
                    id: f.id.value,
                    pw : f.pw.value
                }
            }).then((result)=>{
                const data = result.data;
                if(data.success){
                    alert('로그인 성공');
                }else{
                    alert('아이디 또는 비밀번호가 틀립니다.');
                }
            });
        }

