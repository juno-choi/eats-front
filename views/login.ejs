<!DOCTYPE html>
<html>
<!-- BEGIN: Head-->

<head>
    <title>eats 로그인</title>
</head>
<!-- END: Head-->
<header>
    <% include template/header %>
</header>
<!-- ======= Mobile nav toggle button ======= -->
<!-- <button type="button" class="mobile-nav-toggle d-xl-none"><i class="bi bi-list mobile-nav-toggle"></i></button> -->
<i class="bi bi-list mobile-nav-toggle d-xl-none"></i>
<header id="header" class="d-flex flex-column justify-content-center">

<nav id="navbar" class="navbar nav-menu">
    <ul>
    <li><a href="/" class="nav-link"><i class="bx bx-home"></i> <span>Home</span></a></li>
    <li><a href="/eats" class="nav-link"><i class="bx bx-server"></i> <span>메뉴뽑기</span></a></li>
    <li><a href="/login" class="nav-link active"><i class="bx bx-user"></i> <span>로그인</span></a></li>
    </ul>
</nav>
</header>
<body>
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact" style="height: 100vh;">
    <div class="container">
        <div class="section-title mb-5">
            <h2>eats 로그인</h2>
        </div>
        <div class="card">
            <div class="card-header border-0">
                <div class="card-title text-center">
                    <h3>로그인</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row mt-2">
                    <div class="col-lg-12">
                        <form name="f">
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control form-control-lg input-lg" id="id" placeholder="아이디" required>
                                </div>
                                <div class="col-md-12 form-group mt-3">
                                    <input type="password" class="form-control form-control-lg input-lg" id="pw" placeholder="비밀번호" required>
                                </div>
                            </div>
                        </form>
                        <div class="row mt-5">
                            <div class="col-md-12 text-center">
                                <button type="button" class="btn btn-info btn-lg btn-block" onclick="login()">로그인</button> 
                                <button type="button" class="btn btn-warning btn-lg btn-block" onclick="location.href='/join'">회원가입</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section><!-- End Contact Section -->
</body>
<!-- END: Body-->
<footer>
    <% include template/footer %>
</footer>
<!-- page script -->
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
    function login(){
        const form = document.f;
        axios.post('/login', {
            params: {
                id: f.id.value,
                pw : f.pw.value
            }
        }).then((result)=>{
            const data = result.data;
            if(data.success){
                alert('로그인 성공');
            }else{
                alert('아이디 또는 비밀번호가 틀립니다.');
            }
        });
    }
</script>
</html>